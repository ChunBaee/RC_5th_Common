<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/play_min_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/default_background_color">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:max="40"
            android:progress="20"
            android:progressTint="@color/bottom_icon_selected" />

        <ImageView
            android:id="@+id/btn_playList"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/icon_playlist" />

        <TextView
            android:id="@+id/txt_play_title"
            app:layout_constraintLeft_toRightOf="@id/btn_playList"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:layout_marginTop="10sp"
            android:text="제 목"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_playList"
            app:layout_constraintTop_toBottomOf="@id/txt_play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:layout_marginBottom="10sp"
            android:text="가 수"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btn_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_marginEnd="25sp"
            android:src="@drawable/icon_next" />

        <ImageView
            android:id="@+id/btn_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_next"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginRight="15sp"
            android:src="@drawable/icon_play" />

        <ImageView
            android:id="@+id/btn_previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_marginRight="15sp"
            android:src="@drawable/icon_previous" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>